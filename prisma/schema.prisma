// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      Int      @default(autoincrement()) @id
  name    String   
  pass    String   @unique
  email   String   @unique
  token   String   @unique  
}

model Produtos {
  id      Int      @default(autoincrement()) @id
  name    String   
  icon    String  @unique
}

model Links {
  id           Int      @default(autoincrement()) @id
  userEmail    String   @unique  
  link         String   @unique
  productsIDs  String     
}
